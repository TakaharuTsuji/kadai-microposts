<p><%= micropost.id%>  <%= micropost.content %></p>

<% if current_user.likempost?(micropost) %>
  <%= form_with(model: current_user.favorites.find_by(like_id: micropost.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit 'お気に入り解除', class: 'btn btn-ligth' %>
  <% end %>
<% else %>

  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit 'お気に入り', class: 'btn btn-dark' %>
  <% end %>

<% end %>
